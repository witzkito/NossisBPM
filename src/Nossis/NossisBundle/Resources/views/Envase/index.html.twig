{% extends "NossisBundle::layout.html.twig" %}

{% block title %}Envase Ingreso{% endblock %}

{% block body -%}
    <h1>Stock Actual de Envases</h1>
    <hr>
        <div class="grid">
            <table class="records_list">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Identificador</th>
                        <th>Cantidad</th>
                        <th>Unidad</th>
                        <th>Actiones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.producto }}</td>
                        <td>{{ entity.identificador }}</td>
                        <td>{{ entity.cantidad }}</td>
                        <td>{{entity.unidad}}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('envase_ingreso', { 'id': entity.id }) }}">Ver Lotes</a>
                            </li>
                            <li>
                                <a href="{{ path('envase_ingreso_new', { 'id': entity.id }) }}">Ingresar</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
       
    {% endblock %}
